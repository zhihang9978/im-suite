# 志航密信生产环境配置示例
# 复制此文件为 .env.production 并修改配置

# 数据库配置
MYSQL_ROOT_PASSWORD=YourSecureRootPassword123!
MYSQL_DATABASE=im_suite_prod
MYSQL_USER=im_user
MYSQL_PASSWORD=YourSecureDBPassword123!

# Redis配置
REDIS_PASSWORD=YourSecureRedisPassword123!

# MinIO配置
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=YourSecureMinIOPassword123!

# JWT配置
JWT_SECRET=YourVeryLongAndSecureJWTSecretKey123456789!@#$%^&*()

# API基础URL配置
ADMIN_API_BASE_URL=https://yourdomain.com/api
WEB_API_BASE_URL=https://yourdomain.com/api
WEB_WS_BASE_URL=wss://yourdomain.com/ws

# WebRTC配置
WEBRTC_ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"},{"urls":"stun:stun1.l.google.com:19302"}]

# 监控配置
GRAFANA_PASSWORD=YourSecureGrafanaPassword123!

# SSL证书配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 域名配置
DOMAIN_NAME=yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=10

# 性能配置
MAX_CONCURRENT_CONNECTIONS=10000
MAX_FILE_SIZE=100MB
UPLOAD_TIMEOUT=300s

# 安全配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# 邮件配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=志航密信

# 短信配置（用于验证码）
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=your-access-key
SMS_SECRET_KEY=your-secret-key
SMS_SIGN_NAME=志航密信
SMS_TEMPLATE_CODE=SMS_123456789

# 推送配置
PUSH_APP_ID=your-push-app-id
PUSH_APP_SECRET=your-push-app-secret
PUSH_APP_KEY=your-push-app-key

# 第三方服务配置
ALIYUN_OSS_ACCESS_KEY=your-oss-access-key
ALIYUN_OSS_SECRET_KEY=your-oss-secret-key
ALIYUN_OSS_BUCKET=your-oss-bucket
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# 开发调试（生产环境设为false）
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_PPROF=false
