# IM-Suite 后端环境配置

# 服务配置
PORT=8080
ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=im_suite
DB_USER=im_suite
DB_PASSWORD=im_suite_pass

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO 配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=im_suite
MINIO_SECRET_KEY=im_suite_pass
MINIO_USE_SSL=false

# JWT 配置
JWT_SECRET=im_suite_jwt_secret_key_2025
JWT_EXPIRE_HOURS=24

# WebSocket 配置
WS_ENABLED=true
WS_PORT=8080

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 安全配置
CORS_ALLOWED_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1
